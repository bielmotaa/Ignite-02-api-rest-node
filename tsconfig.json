{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // File Layout
    // ESSAS CONFIGURACOES SAO PARA O 
    // TSUP - TRANSPILAR O CODIGO PARA JS E COLOCAR NA PASTA BUILD 
    // (QUE Ã‰ A PASTA DE SAIDA Q ELE GERA COM O COMANDO : npx tsc)
     //"rootDir": "./src",
     //"outDir": "./build",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "nodenext",
    "target": "es2020", //diz qual versao do js a gente vai converter nosso cod pro node entender
    "types": [],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}
